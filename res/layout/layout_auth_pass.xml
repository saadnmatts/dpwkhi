<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/background_overall"
    android:padding="@dimen/activity_margin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginTop="@dimen/general_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/icons"
            android:text="Username" />

        <EditText
            android:id="@+id/etAgentUser"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:hint="@string/text_agent"
            android:textSize="@dimen/typo_caption" >
        </EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/general_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/icons"
            android:text="Password" />

        <EditText
            android:id="@+id/etAgentPass"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"            
            android:layout_weight="5"
            android:ems="10"
            android:hint="@string/text_password"
            android:textSize="@dimen/typo_caption"></EditText>

    </LinearLayout>

</LinearLayout>
